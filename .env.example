# Core application settings
NODE_ENV=development
LOG_LEVEL=info
APP_VERSION=0.1.0

# Web app
WEB_PORT=3000
WEB_OTLP_ENDPOINT=http://localhost:4318
WEB_FEATURE_FLAG_PROVIDER=local

# API app
API_PORT=4000
API_HOST=0.0.0.0
API_JWT_ISSUER=https://auth.dev.haizel.local
API_JWT_AUDIENCE=haizel-broker
API_JWT_SECRET=super-secret-key-1234
API_OTLP_ENDPOINT=http://localhost:4318
# Prisma expects DATABASE_URL during generation. Keep it aliased to the API connection string.
DATABASE_URL=postgresql://haizel:haizel@localhost:5432/haizel
API_POSTGRES_URL=postgresql://haizel:haizel@localhost:5432/haizel
API_REDIS_URL=redis://localhost:6379
API_IDEMPOTENCY_TTL_SECONDS=86400

# Worker
WORKER_OTLP_ENDPOINT=http://localhost:4318
TEMPORAL_ADDRESS=localhost:7233
TEMPORAL_NAMESPACE=default

# Feature flags
UNLEASH_URL=http://localhost:4242/api
UNLEASH_TOKEN=dev-token

# S3 / MinIO
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minio
S3_SECRET_KEY=minio123
S3_BUCKET=haizel-dev

# Mailpit
MAILPIT_SMTP_HOST=localhost
MAILPIT_SMTP_PORT=1025

# OpenTelemetry collector
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318

# Grafana credentials
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin
